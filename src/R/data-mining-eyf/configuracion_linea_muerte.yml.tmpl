# Directorios de trabajo
dir:
  lib: ${base}/src/R/data-mining-eyf/lib
  input: ${base}/src/R/data-mining-eyf/input/months_base_denicolay
  output: ${base}/src/R/data-mining-eyf/output
  work: ${base}/src/R/data-mining-eyf/work
  
# Semilla a utilizar
semilla: 102191

# Hiperparametros a utilizar
hiperparametros:
  eta: 0.095963836
  max_depth: 17
  gamma: 9.714914
  subsample: 0.9789198
  colsample_bytree: 0.4185444
  min_child_weight: 2.986044
  alpha: 3.72008899
  lambda: 1.755793
  
# Indica si se debe unificar BAJA+1 con BAJA+2
unificar.clases: FALSE
  
# Cantidad de rounds para entrendar
rondas.entrenamiento: 300

# Cantidad de meses para entrenar
meses.entrenamiento: 10

# Offset de meses entre train y test
offset.meses.train.test: 2

# Rango de fechas a evaluar:
fecha.desde: 2019-04-01
fecha.hasta: 2019-04-01

# Definicion de archivo de seleccion de variables (se busca en la carpeta "work")
archivo.seleccion.variables: "mejores_variables.rds"